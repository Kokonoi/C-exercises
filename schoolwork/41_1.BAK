#include <stdio.h>

float zb(float a, float b, float c);
float sv(float a, float b, float c);

main()
{
 float n1, n2, n3, zbir, svred;

 printf("Unesite tri broja \n");
 scanf("%f%f%f", &n1,&n2,&n3);

 zbir = zb(n1,n2,n3);
 svred = sv(n1,n2,n3);

 printf("Zbir brojeva je %f, a srednja vrednost je %f\n", zbir,svred);
 getch();
}





float zb(float a, float b, float c)
{
 float zbir;
 zbir = a+b+c;
 return zbir;
};
float sv(float a, float b, float c)
{
 float sredv;
 sredv = (a+b+c)/3;
 return sredv;
};













