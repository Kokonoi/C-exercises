#include <stdio.h>
#include <ctype.h>

main()
{
 int brojV=0, brojM=0, brojC=0;
 char tekst;
 printf("Unesi tekst\n");
 while ((tekst=getchar())!= EOF){
  if(isupper(tekst)){
    brojV++;
   }
  if(islower(tekst)){
    brojM++;
   }
  if(isdigit(tekst)){
    brojC++;
   }
  }
 printf(" Velika slova: %d\n Mala slova: %d\n Broj karaktera: %d\n", brojV,
 brojM, brojC);
 getch();

 }








